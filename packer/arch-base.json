{
  "builders": [
    {
      "boot_command": [
        "<enter><wait10><wait10><wait10><wait10>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
        "/usr/bin/bash ./enable-ssh.sh<enter>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{ user `disk` }}",
      "guest_additions_mode": "upload",
      "guest_os_type": "ArchLinux_64",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless`}}",
      "http_directory": ".",
      "iso_checksum": "file:{{ user `iso_checksum_url` }}",
      "iso_url": "{{ user `iso_url` }}",
      "shutdown_command": "sudo shutdown -h now",
      "ssh_password": "vagrant",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "ssh_username": "vagrant",
      "type": "virtualbox-iso",
      "memory": 1024,
      "iso_interface": "sata",
      "vboxmanage": [
	      [ "modifyvm", "{{.Name}}", "--firmware", "EFI" ],
	      ["modifyvm", "{{.Name}}", "--vram", "128"]
      ]
    }
  ],
  "post-processors": [
    {
      "output": "output/arch_vagrant_base.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "execute_command": "{{ .Vars }} COUNTRY={{ user `country` }} sudo -E -S bash '{{ .Path }}'",
      "script": "install.sh",
      "type": "shell"
    }
  ],
  "variables": {
    "country": "DE",
    "disk": "204800",
    "headless": "true",
    "iso_checksum_type": "sha1",
    "iso_checksum_url": "https://mirror.puzzle.ch/archlinux/iso/2021.03.01/sha1sums.txt",
    "iso_url": "https://mirror.puzzle.ch/archlinux/iso/2021.03.01/archlinux-2021.03.01-x86_64.iso",
    "ssh_timeout": "20m"
  }
}

