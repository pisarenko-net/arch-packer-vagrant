{
    "variables": {
        "iso_url": "https://archlinux.nullpointer.io/iso/2019.06.01/archlinux-2019.06.01-x86_64.iso",
        "iso_checksum_url": "https://archlinux.nullpointer.io/iso/2019.06.01/sha1sums.txt",
        "iso_checksum_type": "sha1",
        "ssh_timeout": "20m",
        "country": "DE",
        "headless": "true",
        "disk": "204800" 
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "iso_url": "{{ user `iso_url` }}",
            "iso_checksum_url": "{{ user `iso_checksum_url` }}",
            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "guest_os_type": "ArchLinux_64",
            "guest_additions_mode": "upload",
            "http_directory": ".",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait10><wait10><wait10><wait10>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
                "/usr/bin/bash ./enable-ssh.sh<enter>"
            ],
            "disk_size": "{{ user `disk` }}",
            "hard_drive_interface": "sata",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_timeout": "{{ user `ssh_timeout` }}",
            "shutdown_command": "sudo shutdown -h now",
            "headless" : "{{ user `headless`}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "{{ .Vars }} COUNTRY={{ user `country` }} sudo -E -S bash '{{ .Path }}'",
            "script": "install.sh"
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "output/arch_vagrant_base.box"
        }
    ]
}
